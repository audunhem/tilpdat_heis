func RedestributeExternalOrders(){

}



func main(){
  var elev1 Elevator
  elev1.Direction = DirnUp
  elev1.CurrentFloor = 1
  fmt.Println(CalculateSingleElevatorCost(elev1, 2, DirnUp))
}

